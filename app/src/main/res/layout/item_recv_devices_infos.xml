<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/item_recv_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/item_recv_devices_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="6"
                android:maxEms="5"
                android:layout_weight="0.4"
                android:text=""
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.6">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温度"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/item_recv_devices_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/item_recv_devices_hum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_recv_devices_freshtime"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_recv_devices_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_unknow"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right|bottom"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/item_recv_devices_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="卧室"
            android:textSize="12sp"
            android:lines="1"
            android:maxLines="1"
            android:maxLength="6"
            android:maxEms="5"
            android:textColor="#A9C5B8"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--
                style="?android:attr/progressBarStyleHorizontal"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/view_item_progress_voltage"
            -->
            <ProgressBar
                android:id="@+id/item_recv_devices_voltage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/view_item_progress_voltage"
                android:max="12" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>